{
  "name": "nodejs-typescript-boilerplate",
  "version": "0.0.0",
  "description": "nodejs-typescript-boilerplate",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/!(*.queries).ts": [
      "yarn prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14",
    "@types/pg": "^7.14.11",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@typescript-eslint/typescript-estree": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.6",
    "tsutils": "^3.21.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "dev": "ts-node-dev src/main.ts --trace-sync-io",
    "start:prod": "node dist/src/main",
    "test": "jest",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prettier": "prettier --write --config .prettierrc ./src///*.ts && prettier --write --config .prettierrc ./test///*.ts",
    "build": "tsc",
    "prebuild": "rimraf ./dist"
  },
  "author": "CuteWisp <sweatpotato13@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "node-cron": "^3.0.0",
    "pg": "^8.5.1",
    "table-scraper": "^1.0.3",
    "tslib": "^2.1.0"
  },
  "volta": {
    "node": "12.18.3",
    "npm": "6.14.5"
  }
}
